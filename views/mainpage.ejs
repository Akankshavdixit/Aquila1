<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>
    <link rel="stylesheet" href="style.css">
</head>
<body class="bg-[#EEE0C9] flex items-center justify-center min-h-screen">
    <div class="w-full max-w-4xl p-6">
        <div class="flex justify-end mb-4">
            <a href="/index">
                <button class="text-white bg-blue-500 hover:bg-blue-700 px-4 py-2 rounded-full flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 5v14M5 12h14" />
                    </svg>
                    <span class="ml-2">Add Task</span>
                </button>
            </a>
        </div>
        <ul class="space-y-4">
            <% data.forEach(item => { %>
                <li class="flex items-center justify-between bg-white p-4 rounded-lg shadow-md">
                    <p class="text-justify <%= item.status === 'completed' ? 'line-through text-gray-500' : '' %>">
                        <%= item.task %>
                    </p>
                    <div class="flex space-x-2">
                        <% if (item.status !== 'completed') { %>
                            <form action="/complete/<%= item.task_id %>" method="POST">
                                <button type="submit" class="text-white bg-green-500 hover:bg-green-700 px-4 py-2 rounded-md">Complete</button>
                            </form>
                        <% } %>
                        <form action="/delete/<%= item.task_id %>" method="POST">
                            <button type="submit" class="text-white bg-red-500 hover:bg-red-700 px-4 py-2 rounded-md">Delete</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
